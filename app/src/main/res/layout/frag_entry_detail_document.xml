<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".ui.activities.EntryDetailActivity"
    tools:showIn=".ui.activities.EntryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/entry_detail_document_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPaddingTop="32dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/entry_detail_document_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/googleBlue"
                    tools:text="@tools:sample/lorem/random"/>

                <TextView
                    android:id="@+id/entry_detail_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:textSize="14sp"
                    tools:text="@tools:sample/lorem/random"/>

                <Space
                    android:id="@+id/entry_detail_extrasSpace"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/entry_detail_journalRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:id="@+id/entry_detail_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    tools:text="@tools:sample/lorem/random"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/entry_detail_doiLink"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:text="DOI"
                    android:textSize="20sp"
                    android:textColor="@color/googleGreen"
                    android:drawableStart="@drawable/info"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:id="@+id/entry_detail_webLink"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:text="Web"
                    android:textSize="20sp"
                    android:textColor="@color/googleYellow"
                    android:drawableStart="@drawable/globe"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:id="@+id/entry_detail_pdfLink"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:text="PDF"
                    android:textColor="@color/googleRed"
                    android:textSize="20sp"
                    android:drawableStart="@drawable/file"
                    android:drawablePadding="20dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>